@model List<CourseWorkProject.Models.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Tutor/Views/Shared/_TutorLayout.cshtml";
}

<div class="container">

    <!-- Content wrapper start -->
    <div class="content-wrapper">

        <!-- Row start -->
        <div class="row gutters">

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

                <div class="card m-0">

                    <!-- Row start -->
                    <div class="row no-gutters">
                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-3 col-3">
                            <div class="users-container">
                                <div class="chat-search-box">
                                    <div class="input-group">
                                        <input class="form-control" placeholder="Search">
                                        <div class="input-group-btn">
                                            <button type="button" class="btn btn-info">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <ul class="users">
                                    @foreach (var item in Model)
                                    {
                                        <li class="person" data-chat="person1" onclick="return loadData(@item.id)">
                                            <div class="user">
                                                <img src="@Url.Content("~/images/" + item.Profile.img)" alt="Retail Admin">
                                            </div>
                                            <p class="name-time">
                                                <span class="name @string.Format("{0}_{1}", "Name", item.id)">@item.Profile.Name</span>
                                            </p>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="col-xl-8 col-lg-8 col-md-8 col-sm-9 col-9">
                            <div class="selected-user">
                                <span>To: <span class="myName"></span></span>
                            </div>
                            <div class="chat-container">
                                <ul class="chat-box chatContainerScroll">
                                </ul>
                                <div class="form-group" style="height: 83px;">
                                    <textarea class="form-control col-xl-10 col-lg-10 col-md-10 float-left" rows="2" placeholder="Type your message here..."></textarea>
                                    <button class="btn btn-primary col-lg-2 h-75 send_btn"><i class="fa fa-paper-plane"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Row end -->
                </div>

            </div>

        </div>
        <!-- Row end -->

    </div>
    <!-- Content wrapper end -->
</div>
@section scripts{
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <script src="~/signalr/js"></script>
    <script src="~/Areas/Tutor/Scripts/chatJs.js"></script>
}



