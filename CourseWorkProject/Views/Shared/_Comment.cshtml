@model List<CourseWorkProject.Models.Comment>

@if (Model.Count != 0)
{
    foreach (var com in Model)
    {

        <div class="card comment-box">
            <div class="card-header user-comment" style="background-color:#fff">
                <span><b>@com.User.Profile.Name</b></span>
                <p>
                    @com.Content
                </p>              
            </div>
        </div>
    }
}